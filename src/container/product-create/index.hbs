<main>
  <section>
    <h1>Создать товар</h1>
    <div class="form">
      <h2 class="form__title">Информация про товар</h2>
      <form method="POST" action="/product-create">
        <div class="form__content">
          <div class="form__field-sum">
            <div class="label">
              <label for="email" class="form__label">Название товара</label>
              <input type="text" name="name" class="form__input">
            </div>
            <div class="label">
              <label for="login" class="form__label">Цена</label>
              <input type="text" name="price" class="form__input">
            </div>
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Описание товара</label>
            <input type="textarea" name="description" class="form__input-pas">
          </div>
          <button class="form__button  btn btn-primary">Создать</button>
        </div>
      </form>
    </div>
  </section>
</main>